<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/munchkinYellow"
    tools:context=".activites.SignUpActivity">

    <TextView
        android:id="@+id/textViewRegisterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="@color/munchkinBrown"
        android:textColorHighlight="@color/munchkinButtonPressedLightBrown"
        android:textColorLink="@color/munchkinBrown"
        android:textCursorDrawable="@color/munchkinBrown"
        android:textSize="36sp"
        android:textStyle="bold"
        android:theme="@style/BrownEditText"
        app:layout_constraintBottom_toTopOf="@+id/editTextUserName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.216" />

    <EditText
        android:id="@+id/editTextFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Fullname"
        android:inputType="textPersonName"
        android:textColorHighlight="@color/munchkinButtonPressedLightBrown"
        android:textColorLink="@color/munchkinBrown"
        android:textCursorDrawable="@color/munchkinBrown"
        android:theme="@style/BrownEditText"
        app:layout_constraintBottom_toTopOf="@+id/editTextUserName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColorHighlight="@color/munchkinButtonPressedLightBrown"
        android:textColorLink="@color/munchkinBrown"
        android:textCursorDrawable="@color/munchkinBrown"
        android:theme="@style/BrownEditText"
        app:layout_constraintBottom_toTopOf="@+id/editTextEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHighlight="@color/munchkinButtonPressedLightBrown"
        android:textColorLink="@color/munchkinBrown"
        android:textCursorDrawable="@color/munchkinBrown"
        android:theme="@style/BrownEditText"
        app:layout_constraintBottom_toTopOf="@+id/editTextPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHighlight="@color/munchkinButtonPressedLightBrown"
        android:textColorLink="@color/munchkinBrown"
        android:textCursorDrawable="@color/munchkinBrown"
        android:theme="@style/BrownEditText"
        app:layout_constraintBottom_toTopOf="@+id/editTextVerifyPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextVerifyPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Verify Password"
        android:inputType="textPassword"
        android:textColorHighlight="@color/munchkinButtonPressedLightBrown"
        android:textColorLink="@color/munchkinBrown"
        android:textCursorDrawable="@color/munchkinBrown"
        android:theme="@style/BrownEditText"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.968" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:layout_marginBottom="40dp"
        android:checkedButton="@id/radioBtnMale"
        app:layout_constraintBottom_toTopOf="@+id/buttonSignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radioBtnMale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textColorHighlight="@color/munchkinButtonPressedLightBrown"
            android:textColorLink="@color/munchkinBrown"
            android:textCursorDrawable="@color/munchkinBrown"
            android:theme="@style/BrownEditText"
            tools:layout_conversion_absoluteHeight="46dp"
            tools:layout_conversion_absoluteWidth="232dp"
            tools:layout_editor_absoluteX="105dp"
            tools:layout_editor_absoluteY="294dp" />

        <RadioButton
            android:id="@+id/radioButtonFemale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textColorHighlight="@color/munchkinButtonPressedLightBrown"
            android:textColorLink="@color/munchkinBrown"
            android:textCursorDrawable="@color/munchkinBrown"
            android:theme="@style/BrownEditText"
            tools:layout_conversion_absoluteHeight="46dp"
            tools:layout_conversion_absoluteWidth="232dp"
            tools:layout_editor_absoluteX="105dp"
            tools:layout_editor_absoluteY="536dp" />

    </RadioGroup>

    <Button
        android:id="@+id/buttonSignUp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_profile"
        android:text="Sign up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>