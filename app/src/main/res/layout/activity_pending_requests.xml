<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".activites.PendingRequestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/munchkinBrown">

        <SearchView
            android:id="@+id/search_barPending"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/munchkinYellow"
            android:backgroundTint="@color/munchkinBrown"
            android:iconifiedByDefault="false"
            android:queryHint="Search for players"
            app:defaultQueryHint="Search"
            app:iconifiedByDefault="false"
            android:textColorHint="@color/white"
            app:queryHint="Search for players" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/munchkinBrown" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_user_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/munchkinYellow" />
</LinearLayout>