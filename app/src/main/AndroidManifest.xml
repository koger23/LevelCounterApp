<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kogero.levelcounter">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activites.MainMenuActivity" />
        <activity android:name=".activites.SignUpActivity" />
        <activity android:name=".activites.FriendsActivity" />
        <activity android:name=".activites.StatisticsActivity" />
        <activity android:name=".activites.UsersActivity" />
        <activity android:name=".activites.PendingRequestActivity" />
        <activity android:name=".activites.PersonalStatisticsActivity" />
        <activity android:name=".activites.NewGameSelectionActivity" />
        <activity android:name=".activites.GameActivity" />
        <activity android:name=".activites.LoadGameActivity" />
        <activity android:name=".activites.JoinGameActivity" />
        <activity android:name=".activites.ProfileActivity" />
        <activity android:name=".activites.LoginActivity" />
    </application>

</manifest>